<nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="mainNav">
  <a class = "nav-brand" href="/">Game Spot News Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggller-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mrauto">
      <li class="nav-item">
        <a class="nav-link" href="/saved">Saved Articles</a>
      </li>
      <li class="nav-item">
        <span class="nav-link scrape" style="cursor: pointer">Scrape New Articles</span>
      </li>
    </ul>
  </div>
</nav>
<br> {{#unless unsavedArticles}}
<div class="row">
  <div class"col-md-2"></div>
  <div class="col-md-8">
    <div class="alert alert-dismissable alert-primary" style="text-alaign:center">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>There are no Articles Scraped for YOU!!!!</strong>
    </div>
    <div>
      <button type="button" class="btn btn-outline-light btn-lg btn-block scrape">Scrape Articles</button>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
{{/unless}}
 {{#each unsavedArticles}}
<div class="class row">
  <div class="card mb-3 col-md-6 col-sm-8 col-xs-12" id="cardArticle">
    <a href={{link}} target="-blank" class="articleLink">
      <h3 class="cardheader">{{title}}</h3>
    </a>
    <div class="card-body row">
      <div class="col-md-6">
        <p>
          <span class="card-title">{{author}}</span>
          <span class="card-subtitle text-muted">{{time}}</span>
        </p>
        <p class="card-text">{{summary}}</p>
        <button class="btn btn-outline-light btn sm save" data-id={{_id}}>Save</button>
      </div>
    </div>
  </div>
  <div class=" class col-md-3 col-sm-2"></div>
  </div>
  {{/each}}

  <div class="modal articleCounter" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Scrape Complete</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p class="report">No New Articles. Try again Tomorrow</p>
        </div>
        <div class="modal-footer">
          <button type="button test" class="btn btn-primary" data-dismiss="modal">Okay</button>
        </div>
      </div>
    </div>
  </div>