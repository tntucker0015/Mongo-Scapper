<nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="mainNav">
    <a class="navbar-brand" href="/">Game Spot News Scraper Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/saved">Saved Articles</a>
            </li>
        </ul>
    </div>
</nav>
<br> {{#unless savedNews}}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="alert alert-dismissible alert-primary" style="text-align:center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Uh oh, no saved articles!</strong>
        </div>
        <div>
            <a href="/">
                <button type="button" class="btn btn-outline-info btn-lg btn-block">Browse available articles</button>
            </a>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

{{/unless}} {{#each savedNews}}
<div class="class row">
    <div class="class col-md-3 col-sm-2"></div>
    <div class="card mb-3 col-md-6 col-sm-8 col-xs-12" id="cardArticle">
        <a href={{link}} target="_blank" class="articleLink">
            <h3 class="card-header">{{title}}</h3>
        </a>
        <div class="card-body row">
            <div class="col-md-6">
                <p>
                    <span class="card-title">{{author}}</span>
                    <span style="color:grey">|</span>
                    <span class="card-subtitle text-muted">{{time}}</pan>
                </p>
                <p class="card-text">{{summary}}</p>
                <button type="button" class="addComment btn btn-sm btn-outline-info" data-toggle="modal" data-target="#commentModal" data-id={{_id}}>Comments</button>
                <button class="unsave btn btn-sm btn-outline-danger" data-id={{_id}}>unsave</button>
            </div>
        </div>
    </div>
    <div class="class col-md-3 col-sm-2"></div>
</div>
{{/each}}
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group comment-container">
                </ul>
                <br>
                <form>
                    <div class="form-group">
                        <textarea class="form-control commentText" placeholder="Leave comment"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success comment-save" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>